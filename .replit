run = "python3 -m uvicorn app.main:app --host 0.0.0.0 --port $PORT"

[nix]
modules = ["python-3.11"]

[build]
command = "pip install -r requirements.txt"

[env]
PYTHONUNBUFFERED = "1"
REPLIT_SHORT_NAME = "instaspotter"

[deployment]
run = ["python3", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "$PORT"]
