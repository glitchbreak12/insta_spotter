run = "bash -c 'PYTHON_EXEC=$(which python3 || which python || find /usr /opt /home/runner -name python3 -type f 2>/dev/null | head -1); echo \"Using Python: $PYTHON_EXEC\"; $PYTHON_EXEC -m uvicorn app.main:app --host 0.0.0.0 --port $PORT'"

[build]
command = "pip install -r requirements.txt"

[env]
PYTHONUNBUFFERED = "1"
PORT = "8000"
